@model List<RecordAuction.Models.Record>

<h1>Records</h1>

<table class="table">

    <tr>
        <th>Artist</th>
        <th>Side A</th>
        <th>Side B</th>
        <th>Notes</th>
        <th>Label</th>
        <th>Number</th>
        <th>Condition</th>
    </tr>

    @foreach (var record in Model)
    {
        <tr>
            <td>@record.Artist</td>
            <td>@record.SideA</td>
            <td>@record.SideB</td>
            <td>@record.Notes</td>
            <td>@record.Label</td>
            <td>@record.RecordNumber</td>
            <td>@record.Condition.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No records yet!</p>
}

<p>
    <a asp-controller="Record" asp-action="Add">Add |</a>
    <a asp-controller="Record" asp-action="Remove">Remove</a>
</p>
